      "label": "MQTT Server"
    },
    {
      "name": "userkey",
      "type": "ACInput",
      "value": "",
      "label": "MQTT Username"
    },
    {
      "name": "apikey",
      "type": "ACInput",
      "value": "",
      "label": "MQTT Password"
    },
    {
      "name": "channelid",
      "type": "ACInput",
      "value": "",
      "label": "Channel ID"
    },
    {
      "name": "timezone",
      "type": "ACInput",
      "value": "US/Pacific",
      "label": "Timezone"
    },
    {
      "name": "newline",
      "type": "ACElement",
      "value": "<hr>"
    },

    {
      "name": "newline3",
      "type": "ACElement",
      "value": "<hr>"
    },
    {
      "name": "CUPSNumber",
      "type": "ACInput",
      "label": "CUPS Number",
      "value": ""
    },
    {
      "name": "PowerSupplier",
