    },
    {
      "name": "apPass",
      "type": "ACInput",
      "label": "ESP AP Password",
      "value": "123456789AP"
    },
    {
      "name": "settingsPass",
      "type": "ACInput",
      "label": "Settings Page Password",
      "value": "admin"
    },
    {
      "name": "save",
      "type": "ACSubmit",
      "value": "Save&Start",
      "uri": "/mqtt_save"
    },
    {
      "name": "discard",
      "type": "ACSubmit",
      "value": "Discard",
      "uri": "/"
    }
