      "label": "Power Supplier Number",
      "value": ""
    },
    {
      "name": "newline4",
      "type": "ACElement",
      "value": "<br>"
    },

    {
      "name": "js",
      "type": "ACElement",
      "value": "<script type='text/javascript'>function refreshP() {document.location.reload(true);}</script>"
    },
    {
      "name": "newline2",
      "type": "ACElement",
      "value": "<hr>"
    },
    {
      "name": "hostname",
